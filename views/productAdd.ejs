<!DOCTYPE html>
<html lang="es">

<%- include("./partials/head", {title: 'Nuevo Producto' }) %>

    <body>

        <%- include("./partials/header") %>

            <main class="body__main__login">
                <section class="body__main__login__section1">
                    <article class="body__main__login__section1__article1">
                        <h3>Nuevo producto</h3>

                    </article>
                    <article class="body__main__login__section1__article2">
                        <form class="body__main__login__section1__article2__form" action=""
                            enctype="multipart/form-data" method="POST">

                            <div>
                                <label for="name">Modelo</label>
                                <input type="text" name="name" id="name" required>
                            </div>
                            <div>
                                <label for="category">Cartegoria</label> <br>
                                <select name="category" id="category">
                                    <option value="cartera">Cartera</option>
                                    <option value="riñonera">Riñonera</option>
                                    <option value="mochila">Mochila</option>
                                </select>
                            </div>
                            <div>
                                <label for="img">Imagen</label>
                                <input type="file" name="img" id="img" required>
                            </div>
                            <div>
                                <label for="color">Color</label>
                                <input type="file" name="color" id="color" required>
                            </div>
                            <div>
                                <label for="descripcion">descripcion</label> <br>
                                <textarea name="descripcion" id="descripcion" cols="30" rows="6"></textarea>
                            </div>
                            <div>
                                <label for="price">Precio</label>
                                <input type="number" name="price" id="price" required>
                                <a href=""></a>
                            </div>

                            <button class="body__main__login__section1__article2__form--button"
                                type="submit">Agregar</button>
                            <button class="body__main__login__section1__article2__form--button"
                                type="reset">Borrar</button>
                        </form>

                    </article>
                </section>

            </main>

            <%- include("./partials/footer") %>

    </body>