<!DOCTYPE html>
<html lang="en">
<%- include("./partials/head") %>

  <body>
    <%- include("./partials/header") %>

      <main>
        <section class="userEdit__container">
          <form class="userEdit__container__form" method="POST" action="/users/userEdit?_method=PUT" id="formUserEdit" >
            <div class="userEdit__form--img">
              <img src="<%= /http/.test(user.avatar) ? user.avatar : " /img/avatar/" + user.avatar %>"
              width="130px" height="130px" alt="">
            </div>
          
              </div>
          </div>
            <div><strong> DATOS PERSONALES:</strong></div>
            <div class="form__dates">
              <label for="name">Nombre:</label> <br>
              <input class="form-control" type="text" name="name" id="name" value="<%= user.name %>">
              <p class="p__msgerror" id="nameMsg"  ></p>
            </div>
            <div class="form__dates">
              <label for="surname">Apellido:</label> <br>
              <input  class="form-control" type="text" name="surname" id="surname" value="<%= user.surname %>">
              <p id="surnameMsg"></p>
            </div>
            <div class="form__dates">
              <label for="pass">Contraseña:</label> <br>
              <input  class="form-control" type="password" name="pass" id="pass" value="<%= user.password %>"> 
              <p id="passMsg"></p>
            </div>
            <div><strong> DIRECCIÓN:</strong></div>
            <div class="form__dates">
                <label for="street">Calle:</label> <br>
                <input class="form-control" type="text" name="street" id="street" value="<%= user.street %>">
                <p id="streetMsg" ></p>
              </div>
              <div class="form__dates">
                <label for="number">Numero:</label> <br>
                <input class="form-control" type="text" name="number" id="number" value="<%= user.number %>">
                <p id="numberMsg" ></p>
              </div>
              <div class="form__dates">
                <label for="location">Localidad:</label> <br>
                <input class="form-control" type="text" name="location" id="location" value="<%= user.location %>">
                <p id="locationMsg" ></p>
              </div>
              <div class="form__dates">
                <label for="province">Provincia:</label> <br>
                <input class="form-control" type="text" name="province" id="province" value="<%= user.province %>">
                <p id="provinceMsg" ></p>
              </div>
              <div class="form__dates">
                <label for="number">Codigo Postal:</label> <br>
                <input class="form-control" type="text" name="postalcode" id="postalcode" value="<%= user.postalcode %>">
                <p id="postalcodeMsg" ></p>
              </div>
            <div class="form__dates">
              <label for="email">Correo Electronico:</label> <br>
              <input class="form-control" id="form__dates-email" type="email" name="email" id="email" value="<%= user.email %>">
            <p id="emailMsg"></p>
            </div>
            <div class="form__dates">
              <button class="userEdit__form--button" type="submit" disabled>Actualizar
              </button>
            </div>
          </form>
        </section>
      </main>
      <%- include("./partials/footer") %>
      <script src="/javascripts/userEdit.js">
      
      </script>
  </body>

</html>