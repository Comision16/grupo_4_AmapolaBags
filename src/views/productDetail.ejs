<!DOCTYPE html>
<html lang="en">

<%- include("./partials/head", {title: 'Detalle del producto' }) %>

    <body>

        <%- include("./partials/header") %>

            <main>
                <section class="main__section__detalles">

                    <div class="div__imgCartera">

                        <img src="/img/<%= product.imgPrimary %>" alt="">

                    </div>

                    <div class="main__section__detalles--esp">
                        <h2>Nombre: <%= product.name %>
                        </h2>
                        <h2>Descripcion: <%= product.description %>
                        </h2>
                        <h2>Categoria: <%= product.category %>
                        </h2>
                        <div class="main__section__detalle--colores-txt">
                            <h2>Colores: </h2>
                        </div>
                        <% product.colors.forEach(color=> { %>

                            <span class="span_color" style=<%="background-color:" + color.hexa
                                +";width:40px;height:40px;display:inline-block;border-radius:50%"%>></span>

                            <% }) %>

                                <div class="main__section__colores">
                                    <hr>
                                    <h1>PRECIO: <%= toThousand(product.price) %>
                                    </h1>

                                    <button onclick="addCartItem('<%=product.id%>')">
                                        <a class="agregar_carrito-button" href="">AGREGAR AL CARRITO</a>
                                    </button>

                                    <% if (locals.userLogin && userLogin.rol===1) { %>
                                        <button>
                                            <a href="/products/productEdit/<%= product.id %>"
                                                class="agregar_carrito-button">EDITAR PRODUCTO</a>
                                        </button>
                                        <button>
                                            <a href="/products/delete?id=<%=product.id%>&name=<%=product.name%>"
                                                class="agregar_carrito-button">ELIMINAR PRODUCTO</a>
                                        </button>

                                        </a> -->
                                        <% } %>
                                </div>

                    </div>
                </section>

                <h1 class="mas_productos_txt">MAS PRODUCTOS</h1>

                <section class="main__section__masProductos">
                    <div><img src="/img/Cartera-Martina.png" alt=""></div>
                    <div><img src="/img/Cartera-Alma2.png" alt=""></div>
                    <div> <img src="/img/Cartera-Alma.png" alt=""></div>
                    <div><img src="/img/Cartera-Cecilia2.png" alt=""></div>
                    <img class="image__none" src="/img/Cartera-mobile.jpg" alt="">
                </section>

            </main>

            <%- include("./partials/footer") %>
            <%- include('partials/scripts') %>
    </body>

</html>