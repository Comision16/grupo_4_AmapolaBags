<!DOCTYPE html>
<html lang="en">

<%- include("./partials/head") %>


    <body>
        <%- include("./partials/header") %>


            <section class="body__section__profile">
                <form class="body__main__register__section1__article2__form" method="POST" action="/users/register">
                    <div class="body__section__profile--img">
                        <img src="<%= /http/.test(user.avatar) ? user.avatar : " /img/avatar/" + user.avatar %>"
                        width="130px" height="130px" alt="">
                    </div>
                    <div>
                        <label for="name">nombre</label> <br>
                        <input type="text" name="name" id="name" value="<%= user.name %>">
                    </div>
                    <div>
                        <label for="surname">apellido</label> <br>
                        <input type="text" name="surname" id="surname" value="<%= user.surname %>">
                    </div>
                    <div class="body__section__profile--password">
                        <label for="rol">Rol</label> <br>
                        <input type="text" name="rol" id="rol" value="<%= user.rolId %>">

                    </div>
                    <div>
                        <label for="email">correo electronico</label> <br>
                        <input type="email" name="email" id="email" value="<%= user.email %>">
                    </div>
                    <div class="body__section__profile--password">
                        <label for="password">contrase√±a</label> <br>
                        <input type="password" name="password" id="password">

                    </div>
                    <button class="body__main__register__section1__article2__form--button"
                        type="submit">Actualizar</button>
                </form>
            </section>

    </body>

</html>