<!DOCTYPE html>
<html lang="es">
<%- include("./partials/head",{title : "Productos" }) %>

  <body class="body__home">
    <%- include("./partials/header") %>

      <!-- INICIO MAIN -->
      <main class="main__carteras">
        <div class="titulos__products">
          <h1>CARTERAS</h1>
        </div>

        <% if (locals.keywords) { %>
         <h2>Resultado de: <strong><%= keywords %></strong></h2>
        <% } %>

        <% if(!products.length){ %> 
          <h2>No existe ningun producto con la palabra <strong><%= keywords %></strong></h2>
        <% }else{ %>
        <section class="main__section__products">
          <% products.forEach(({id,name,price,descripcion,images,color,stock})=> { %>
            <article class="main__section__products__productCartera">
              <a href="/products/productDetail/<%= id %>">
                <img class="productCartera__img" src="/img/<%= images[0]?.file %>" alt="" />
              </a>
              <h4 class="productCartera__nombre">
                <%= name %>
              </h4>
              <h3 class="productCartera__precio">
                <%= toThousand(+price) %>
              </h3>
              <ul>
                <% stock.forEach(item=> { %>
                  <li>
                    <span class="span_color" style=<%="background-color:" + item.color?.name
                      +";width:40px;height:40px;display:inline-block;border-radius:50%"%>></span>
                  </li>
                  <% }) %>
              </ul>
              <button class="boton-favorito">
                <i class="fa-regular fa-heart"></i>
              </button>

            </article>
            <% }) %>
        </section>
        <% } %>
      </main>
      <!-- FIN MAIN -->

      <%- include("./partials/footer") %>
  </body>

</html>

