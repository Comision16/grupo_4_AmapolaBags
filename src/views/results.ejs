<!DOCTYPE html>
<html lang="es">
<%- include("./partials/head",{title : "results" }) %>

  <body class="body__home">
    <%- include("./partials/header") %>

      <!-- INICIO MAIN -->
      <main class="main__carteras">
        <div class="titulos__products">
          <h1>Resultados de la b√∫squeda: <%= keywords %> </h1>
        </div>
        <section class="main_section_products">

        <% products.forEach(({id,name,price,descripcion,images,color})=> { %>
          <article class="main_sectionproducts_productCartera">
            <a href="/products/productDetail/<%= id %>">
              <figure>
                <img class="productCartera__img" src="/img/products/<%= images[0].file %>" alt="imagen de producto" />
              </figure>             
            </a>
            <h4 class="productCartera__nombre">
              <%= name %>
            </h4>
            <h3 class="productCartera__precio">
              <%= toThousand(+price) %>
            </h3>
            <button class="boton-favorito">
              <i class="fa-regular fa-heart"></i>
            </button>
            <div class="productCartera__imgRadio" style="margin: 0 auto;">
              
               <span style=<%= "background-color:" + color +";width:20px;height:20px;display:inline-block;border-radius:50%"%>></span>
              
            </div>
          </article>
          <% }) %>
        </section>
    </main>
    <!-- FIN MAIN -->

    <%- include("./partials/footer") %>
</body>

</html>

